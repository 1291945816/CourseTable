<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/function_menu_itemtv_term"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/function_menu_itemtv_cname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/function_menu_itemtv_cno"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/function_menu_itemtv_date"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#E18989"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/function_menu_itemtv_time"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/function_menu_itemtv_room"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/function_menu_itemtv_week_weekday_time"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/function_menu_itemtv_comment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center" />
</LinearLayout>