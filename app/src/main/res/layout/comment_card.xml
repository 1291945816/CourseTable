<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
    android:layout_marginTop="@dimen/comment_card_out_margin"
    android:layout_marginStart="@dimen/comment_card_out_margin"
    android:layout_marginEnd="@dimen/comment_card_out_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/comment_card_inner_margin"
        android:layout_marginEnd="@dimen/comment_card_inner_margin"
        android:layout_marginTop="@dimen/comment_card_inner_margin"
        android:layout_marginBottom="@dimen/comment_card_inner_margin">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="学号姓名"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textAlignment="viewStart"
            android:id="@+id/comment_card_sid"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="评论详情"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textAlignment="viewStart"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="32dp"
            android:id="@+id/comment_card_comment"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="发表时间"
                android:textSize="12sp"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:id="@+id/comment_card_dt"/>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>