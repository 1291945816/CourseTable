<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/grades_cname"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/grades_grade"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grades_grade"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/grades_usual"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/grades_cname"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grades_usual"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/grades_exp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/grades_grade"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grades_exp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/grades_test"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/grades_usual"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grades_test"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/grades_exp"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
