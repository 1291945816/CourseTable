<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="title">@string/title</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>
    <style name="AppTheme_login" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="title">@string/title_login</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>
    <style name="AppTheme_ChangeHours" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="title">"时间表"</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>
    <style name="TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#505050</item>
    </style>
    <style name="AppTheme_FunctionMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="title">"更多"</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>
    <style name="AppTheme_LibrarySearch" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="title">"图书馆藏查询"</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>
    <style name="AppTheme_AboutUS" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="title">关于</item>
        <item name="overlapAnchor">false</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>
    <style name="AppTheme_ChangeTerms" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="title">"学期调整"</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>
    <style name="AppTheme_Usage" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="title">"使用说明"</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>
    
    <style name="Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/start_page_2</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

</resources>